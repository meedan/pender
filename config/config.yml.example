development: &default
  secret_token: somethingsecret
  authorization_header: 'X-Pender-Token'
  timeout: 25
  public_url: 'http://localhost:3200'
  redis_host: 'redis'
  redis_port: 6379
  redis_database: 1

  # File storage on S3 or API equivalent
  #
  # REQUIRED
  # Use values below for local development
  #
  storage_endpoint: 'http://minio:9000'
  storage_access_key: 'AKIAIOSFODNN7EXAMPLE'
  storage_secret_key: 'wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY'
  storage_bucket: 'pender-dev'
  storage_bucket_region: 'us-east-1'
  storage_video_bucket:
  storage_video_asset_path:
  storage_medias_asset_path: 'http://localhost:9000/pender-dev/medias'

  # Exception reporting using Airbrake or API equivalent https://airbrake.io/
  #
  # OPTIONAL
  #
  airbrake_host: # '<AIRBRAKE HOST>'
  airbrake_port: # '<AIRBRAKE PORT>'
  airbrake_project_key: # '<AIRBRAKE PROJECT KEY>'
  airbrake_environment: # '<AIRBRAKE ENVIRONMENT>'

  # Google API
  #
  # REQUIRED for parsing YouTube links using the API
  # OPTIONAL for Safe Browsing Lookup API https://developers.google.com/safe-browsing/v4/lookup-api
  # To get a key, follow these instructions https://developers.google.com/safe-browsing/v4/get-started
  #
  google_api_key: # '<GOOGLE API KEY>'

  # Twitter API
  #
  # REQUIRED for Twitter posts
  #
  twitter_consumer_key: # '<TWITTER APP CONSUMER KEY>'
  twitter_consumer_secret: # '<TWITTER APP CONSUMER SECRET>'
  twitter_access_token: # '<TWITTER APP ACCESS TOKEN>'
  twitter_access_token_secret: # '<TWITTER APP ACCESS TOKEN SECRET>'

  # Facebook API
  #
  # REQUIRED for Facebook social metrics
  #
  facebook_app: # '<FACEBOOK APP ID>:<FACEBOOK APP SECRET>'

  # Luminati proxy service https://luminati.io/
  #
  # OPTIONAL
  #
  proxy_host: # '<LUMINATI HOST>'
  proxy_port: # '<LUMINATI PORT>'
  proxy_user_prefix: # '<LUMINATI ACCOUNT PREFIX>'
  proxy_country_prefix: #'<LUMINATI COUNTRY PREFIX>'
  proxy_session_prefix: #'<LUMINATI SESSION PREFIX>'
  proxy_pass: # '<LUMINATI ACCOUNT PASSWORD>'

  # Proxy service to download videos using youtube-dl https://youtube-dl.org/
  #
  # OPTIONAL
  #
  ytdl_proxy_host: # '<HOST>'
  ytdl_proxy_port: # '<PORT>'
  ytdl_proxy_user_prefix: # '<ACCOUNT PREFIX>'
  ytdl_proxy_pass: # '<ACCOUNT PASSWORD>'

  # Special instructions to access specific domains
  #
  # OPTIONAL
  #
  hosts: "{\"<HOST DOMAIN>\":{\"country\":\"<COUNTRY CODE FOR PROXY SETTING>\"},\"<HOST DOMAIN>\":{\"cf_credentials\":\"<CLOUDFLARE CREDENTIALS>\"}}"

  # CloudFlare caching https://support.cloudflare.com/hc/en-us/categories/200275248-Caching
  #
  # OPTIONAL
  #
  cloudflare_auth_email: # '<CLOUDFLARE AUTH EMAIL>'
  cloudflare_auth_key: # '<CLOUDFLARE AUTH KEY>'
  cloudflare_zone: # '<CLOUDFLARE ZONE>'

  # Crowdtangle parsing
  #
  # OPTIONAL
  #
  crowdtangle_facebook_token: # '<CROWDTANGLE TOKEN FOR FACEBOOK POSTS>'
  crowdtangle_instagram_token: # '<CROWDTANGLE TOKEN FOR INSTAGRAM POSTS>'

  # Archive.org service to archive pages https://archive.org/account/s3.php
  #
  # OPTIONAL
  #
  archive_org_access_key: # '<ARCHIVE.ORG ACCESS KEY>'
  archive_org_secret_key: # '<ARCHIVE.ORG SECRET KEY>'

  # Perma.cc service to archive pages https://perma.cc/
  #
  # OPTIONAL
  #
  perma_cc_key: # '<PERMA.CC ACCESS KEY>'

test:
  <<: *default
  chrome_debug_port: 9444
  archiver_skip_hosts: ''
  public_url: 'http://localhost:3005'
  storage_bucket: 'check-test'
  storage_video_bucket:
  storage_video_asset_path:
  storage_medias_asset_path: 'http://localhost:9000/check-test/medias'

production:
  <<: *default
